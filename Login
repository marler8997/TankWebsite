<?php

require_once "common.php";
require_once "mysql.php";
require_once "json.php";

header("Content-Type: application/json");
$json = new JsonObject();

try {

  MysqlInit();

  $result = TryToLogin();
  if(is_string($result)) $json->ex($result);

  list($uid,$userName) = $result;
  $allowPlay = MysqlOne("SELECT AllowPlay FROM Users WHERE Uid=$uid;");
  if(!$allowPlay) $json->ex('You user is not allowed to play, have you purchased the game?');

  $json->endAll();

} catch(MysqlException $me) {
  $json->ex('Server Error: your reference number is '.$me->logRefNum);
}

?>